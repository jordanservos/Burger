<div class="container">

  <div class="header">
    <div class="container">
      <h1 class="display-4 text-center" id="title">Eat-Da-Burger!</h1>
      <hr>
      <p class="lead text-center" id="sub">A restaurant app that lets users input the names of burgers they'd like to eat.
      </p>
    </div>
  </div>




  <div class="container" id="main-body">

    <div class="row">
      <div class="col">
<div class="text-center">
        <h5>Ordered Burgers:</h5>
     
        </div>
       

        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>

 <div class="col">
   <div class="text-center" id="order">
        <h5>Order Another:</h5>
        
       
        <form class="create-form">

          <div class="form-group">
            <label for="ca" id="name"></label>
            <input type="text" id="burger-name" data-devoured="0">
            <button id="addBurger" type="button">Add!</button>
          </div>
           </div>



        </form>
      </div>

      <div class="col">
        <div class="text-center">
        <h5>Past Orders:</h5>
        
        </div>

        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/if}}
          {{/each}}
        </ul>
      </div>

     

    </div>

  </div>

</div>